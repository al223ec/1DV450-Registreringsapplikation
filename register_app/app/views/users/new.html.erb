<% provide(:title, 'Sign up') %>
<section>
	<div class="container">
		<h2>Registrera applikation</h2>
		<%= form_for(@user, :html => {class: "form-horizontal" }) do |f| %>
  			<div class="form-group">
		      	<%= f.label :name,"Namn:", { :class => "control-label col-sm-2"}%>
		      	<div class="col-sm-10"> 
		      		<%= f.text_field :name %>
				</div>
			</div>
			<div class="form-group">
		      <%= f.label :email, "Email:", { :class => "control-label col-sm-2"} %>
	      		<div class="col-sm-10">
		      		<%= f.email_field :email %>
				</div>
			</div>
			<div class="form-group">
			<legend>Lösenord för administrering</legend>
		      <%= f.label :password, "Lösenord:", { :class => "control-label col-sm-2"} %>
		      	<div class="col-sm-10">
		      		<%= f.password_field :password %>
				</div>
			</div>
			<div class="form-group">
		      <%= f.label :password_confirmation, "Bekräfta lösenord:", {:class => "control-label col-sm-2"} %>
  		      	<div class="col-sm-10">
		      		<%= f.password_field :password_confirmation %>
				</div>
			</div>
		    <div class="form-group">
		        <div class="col-sm-offset-2 col-sm-10">  
		      		<%= f.submit "Registrera applikation", class: "btn btn-default" %>
				</div>
			</div>
	    <% end %>
	</div>
</section>