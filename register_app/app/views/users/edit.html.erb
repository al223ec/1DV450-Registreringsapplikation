<% provide(:title, "Redigera applikation") %>
<section>
    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            <h2>Redigera applikation</h2>
            <%= form_for(@user, :html => {class: "form-horizontal" }) do |f| %>
            <%= render 'shared/error_messages' %>
            <div class="form-group">
                <%= f.label :name,"Namn:", { :class => "control-label col-sm-2"}%>
                <div class="col-sm-10">
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :email, "Email:", { :class => "control-label col-sm-2"} %>
                <div class="col-sm-10">
                    <%= f.email_field :email, class: 'form-control' %>
                </div>
            </div>
            <legend>Uppdatera lösenord</legend>
            <div class="form-group">
                <%= f.label :password, "Lösenord:", { :class => "control-label col-sm-2"} %>
                <div class="col-sm-10">
                    <%= f.password_field :password, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, "Bekräfta lösenord:", {:class => "control-label col-sm-2"} %>
                <div class="col-sm-10">
                    <%= f.password_field :password_confirmation, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit "Uppdatera", class: "btn btn-default" %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</section>