<%= render 'shared/error_messages' %>
<div class="form-group">
    <%= f.label :name,"Namn:", { :class => "control-label col-sm-2"}%>
    <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
    </div>
</div>
<div class="form-group">
    <%= f.label :email, "Email:", { :class => "control-label col-sm-2"} %>
    <div class="col-sm-10">
        <%= f.email_field :email, class: 'form-control' %>
    </div>
</div>
<legend>Lösenord för administrering</legend>
<div class="form-group">
    <%= f.label :password, "Lösenord:", { :class => "control-label col-sm-2"} %>
    <div class="col-sm-10">
        <%= f.password_field :password, class: 'form-control' %>
    </div>
</div>
<div class="form-group">
    <%= f.label :password_confirmation, "Bekräfta lösenord:", {:class => "control-label col-sm-2"} %>
    <div class="col-sm-10">
        <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
</div>